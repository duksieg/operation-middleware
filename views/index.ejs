<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>นารายณ์ปราบศาสตรา</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</head>

<body>

    <!-- Nav Section-->
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand text-center" href="#">นารายณ์ปราบศาสตรา</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
            </div>
        </div>
    </nav><br><br>

    <div class="container">
        <!-- Header Section-->
        <div class="card">
            <div class="card-header">
                ข้อมูลจุดเข้าค้น
            </div>
            <div class="card-body">
                <form action="/saverecord" method="POST" encType="multipart/form-data" ref='uploadForm'>
                    <div class="row">
                        <div class="col-5">
                            <label for="formGroupStatusInput">สถานะเข้าค้น</label>
                            <select class="form-select mt-2" name="status" id="status" aria-label="select status"
                                onchange="showFound(this)" required>
                                <option disabled selected value="">กรุณาเลือกสถานะการบันทึก</option>
                                <option value="before">ก่อนเข้าค้น</option>
                                <option value="current">กำลังค้น</option>
                                <option value="after">หลังเข้าค้น</option>
                            </select>
                            <div class="invalid-feedback">
                                กรุณาเลือกสถานะการเข้าค้น
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-5">
                            <div class="form-group">
                                <label for="formGroupExampleInput">รหัสจุดค้น</label>
                                <input list="point" class="form-control" id="placeid" name="placeid"
                                    placeholder="รหัสจุดค้น" required>
                                <datalist id="point">
                                    <% for(i=0;i<point.length;i++) {%>
                                        <option value="<%=point[i].trim()%>">
                                            <%}%>
                                </datalist>
                            </div>
                        </div>
                    </div>

                    <div class="row ">
                        <div>
                            <div class="col-5">
                                <div class="form-group">
                                    <label for="formGroupHeadername">ชื่อหัวหน้าจุด</label>
                                    <input list="agent" class="form-control" id="name" name="name"
                                        placeholder="ชื่อหัวหน้าจุด ยศ ชื่อ-นามสกุล" required>
                                    <datalist id="agent">
                                        <% for(i=0;i<agent.length;i++) {%>
                                            <option value="<%=agent[i].trim()%>">
                                                <%}%>
                                    </datalist>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- <div class="col">
                                <div class="form-group">
                                    <label for="formGroupHeadertel">เบอร์โทรศัพท์ติดต่อ</label>
                                    <input type="text" class="form-control" id="tel" name="tel"
                                        placeholder="ใส่เบอร์เต็ม 0999999999" required>
                                </div>
                            </div> -->
                    <div>

                        <!-- <div class="form-group">
                            <label for="reportText">รายงานสถานะการค้น</label>
                            <textarea class="form-control" rows="10" name="reporttext" id="reporttext" required></textarea>
                        </div> -->
                        <label for="formFileMultiple" class="form-label">อัพโหลดรูปภาพหรือไฟล์วิดีโอ ขนาดไฟล์ไม่ควรเกิน 25MB</label>
                        <input class="form-control" onchange="checkfilesize()" type="file" name="filestore" accept="image/*,video/*" id="images" multiple
                            required />
                        <div class="col-5" id="hidden_divFound" style="display:none;">
                            <label for="formGroupStatusInput">พบเจอสิ่งผิดกฎหมายหรือไม่</label>
                            <select class="form-select mt-2" name="isfound" id="isfound" aria-label="select found"
                                onchange="showGuns(this)">
                                <option disabled selected value="">กรุณาเลือกสถานะ</option>
                                <option value="found">พบ</option>
                                <option value="notfound">ไม่พบ</option>
                            </select>
                        </div>

                    </div>
            </div>
        </div>
        <br>

        <!-- guns record for after status Section-->
        <div class="container my-4" id="hidden_div" style="display:none;">
            <div class="card">
                <div class="card-header">
                    บัญชีตรวจยึดอาวุธปืน
                </div>

                <div class="card-body">
                    <div class="form-group row">
                        <label for="inputNormal" class="col-sm-4 col-form-label">จำนวนผู้ถูกจับกุม(ราย)</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" name="criminal" id="criminal"
                                placeholder="ตัวอย่าง 10 ใส่เฉพาะตัวเลขเท่านั้น">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputNormal" class="col-sm-4 col-form-label">อาวุธปืนทั่วไป(กระบอก)</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" name="normalguns" id="normalguns"
                                placeholder="ตัวอย่าง 10 ใส่เฉพาะตัวเลขเท่านั้น">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputNormal" class="col-sm-4 col-form-label">อาวุธปืนสงคราม(กระบอก)</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" name="warguns" id="warguns"
                                placeholder="ตัวอย่าง 10 ใส่เฉพาะตัวเลขเท่านั้น">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputNormal" class="col-sm-4 col-form-label">อาวุธปืนไทยประดิษฐ์(กระบอก)</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" name="thaicraftguns" id="thaicraftguns"
                                placeholder="ตัวอย่าง 10 ใส่เฉพาะตัวเลขเท่านั้น">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputNormal" class="col-sm-4 col-form-label">เครื่องยุทธภัณฑ์(ชิ้น)</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" name="ammunition" id="ammunition"
                                placeholder="ตัวอย่าง 10 ใส่เฉพาะตัวเลขเท่านั้น">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputNormal" class="col-sm-4 col-form-label">อื่นๆ</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="etc" id="etc"
                                placeholder="เช่นยาบ้า 10,000 เม็ด">

                        </div>
                        <div class="col-sm-4">
                            <label class="form-check-label" for="flexCheckDefault">
                                <input class="form-check-input" type="checkbox" value="true" name="specialcase"
                                    id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    พิจารณาแล้วเห็นควรให้ผู้บังคับบัญชาเข้าร่วม
                                </label>
                            </label>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <br>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
            data-bs-target="#checkmodal">Submit</button>
        <!-- Modal -->
        <div class="modal fade" id="checkmodal" tabindex="-1" aria-labelledby="checkmodalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h5 class="modal-title text-center" id="checkmodalLabel">กรุณาตรวจสอบข้อมูลอีกครั้งก่อนดำเนินการ
                        </h5>
                        <div class="d-flex mt-2 justify-content-center">
                            <div class="spinner-border" id="loading" style="display:none;" role="status"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" onclick="loading()" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>

        </div>
        </form>
    </div>
    </div>

</body>

</html>
<script type="text/javascript">
    function showFound(status) {
        if (status.value == "after" || status.value=="current") {
            document.getElementById('hidden_divFound').style.display = "block";
        } else {
            document.getElementById('hidden_divFound').style.display = "none";
            document.getElementById('hidden_div').style.display = "none";
        }
    }

    

    function checkfilesize() {
        let fi = document.getElementById('images');
        // Check if any file is selected.
        let isover = false
        if (fi.files.length > 0) 
        {
            if(fi.files.length > 5){
                alert('สามารถส่งรูปได้สูงสุดไม่เกิน 5 รูป');
                isover=true
            }else{
                for (let i = 0; i <= fi.files.length - 1; i++) {
                const fsize = fi.files.item(i).size;
                const toMB = 1024*1024
                const file = Math.round((fsize / toMB));
                // The size of the file. 25MB
                if (file >= 40) {
                    alert(`ขนาดไฟล์ ${fi.files[i].name} มีขนาด ${file} MB ใหญ่เกินกว่าที่กำหนดกรุณาเลือกรูปใหม่`);
                    isover=true
                } 
            }
            }
            
            if(isover) fi.value=""
        }
            
    };

    function loading() {
        document.getElementById('loading').style.display = "block";
    }


    function showGuns(isfound) {
        let select = document.getElementById('status');
        let value = select.options[select.selectedIndex].value;
        if (isfound.value == 'found' && (value == 'after' || value =='current')) {
            document.getElementById('hidden_div').style.display = "block";
        } else {
            document.getElementById('hidden_div').style.display = "none";
        }
    }
</script>