                                    <label for="car">ข้อมูลรถยนต์</label>
                                    <textarea type="text" name="car" id="car" rows="3" class="form-control"
                                        placeholder="honda/city/ดำ แดง/1กก 9999 กทม , honda/accord/เทา/2กก 9999 ราชบุรี"><%= main.car %></textarea>
                                </div>
                                <div class="col">
                                    <label for="motorcycle">ข้อมูลรถจักรยานยนต์</label>
