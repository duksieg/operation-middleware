            <!-- Header Section-->
            <div class="card-body">
                <form action="/casingrecord" method="POST" encType="multipart/form-data" ref='uploadForm'>

                    <!--Casor-->
                    <div class="card">
                        <div class="card-header">
                            ข้อมูลการบันทึก
                        </div>
                        <div class="card-body">
                            <div class="form-control">
                                <div class="row d-flex my-2">
                                    <div class="col me-3">
                                        <label for="placeid">รหัสจุดค้น</label>
                                        <input list="point" class="form-control" id="code" name="code"
                                            value='<%= main.code %>' placeholder="รหัสจุดค้น">
                                    </div>
                                    <div class="col">
                                        <label for="casingname">ผู้ทำการเคสซิ่ง</label>
                                        <input type='text' class='form-control' id='casingname' name="casingname"
                                            value='<%= main.casingname %>' placeholder="ส.ต.ต.xxxxxx xxxxxx">
                                    </div>
                                </div>
                                <div class="row d-flex my-2">
                                    <div class="col me-3">
                                        <label for="casingdate">วันที่ทำการเคสซิ่ง</label>
                                        <input type='date' class='form-control' id='casingdate' name="casingdate">
                                    </div>

                                    <div class="col">
                                        <label for="casingtel">เบอร์โทรติดต่อ</label>
                                        <input type="text" class="form-control" id='casingtel' name="casingtel"
                                            value='<%= main.casingtel %>' placeholder="xxx-xxxxxxx">
                                    </div>
                                </div>
                                <div class="d-flex my-2">
                                    <div class="form-check form-check-inline">
                                        <input type="radio" id="foundedtarget" name="istargetfounded" <% if
                                            (main.istargetfounded=='TRUE' ) { %>
                                        checked
                                        <% } %>
                                            value="true"
                                            >
                                            <label for=" foundedtarget">พบเป้าหมาย</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" id="notfoundtatger" name="istargetfounded" <% if
                                            (main.istargetfounded=='FALSE' ) { %>
                                        checked
                                        <% } %>
                                            value="false" >

                                            <label for="notfoundtatger">ไม่พบเป้าหมาย</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- target information-->

